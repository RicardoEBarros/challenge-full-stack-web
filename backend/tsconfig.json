{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["*"]
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "tests",
    "node_modules",
    "dist",
    "coverage"
  ]
}